<div class="input-field field">
  <%= f.text_field :name, autofocus: true, class: "validate" %>
  <%= f.label :name %><br />
</div>

<div class="input-field field">
  <%= f.text_field :code, class: "validate" %>
  <%= f.label :code %><br />
</div>

<div class="input-field field">
  <%= f.text_field :category, class: "validate" %>
  <%= f.label :category %><br />
</div>

<div class="input-field field">
  <%= f.text_area :description, class: "validate materialize-textarea" %>
  <%= f.label :description %><br />
</div>

<div class="input-field field">
  <%= f.file_field :picture %>
  <%= f.label :picture %><br />
  <% if f.object.picture? %>
    <%= image_tag f.object.picture.thumb.url %>
    <%= f.check_box :remove_picture %> 
    <%= f.label :remove_picture %>
  <% end %>
</div>

<br/>
