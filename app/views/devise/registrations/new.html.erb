<div class="row padding-top-50">
  <div class="col s4 offset-s4">
    <h3 class="center">Sign up</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-field field">
        <i class="material-icons prefix">email</i>
        <%= f.email_field :email, autofocus: true, class: "validate" %>
        <%= f.label :email %><br />
      </div>

      <div class="input-field field">   
        <i class="fa fa-key prefix" aria-hidden="true"></i>
        <%= f.password_field :password, autocomplete: "off", class: "validate" %>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <div class="padding-left-40">
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          </div>
        <% end %>
      </div>

      <div class="input-field field">
        <i class="fa fa-key prefix" aria-hidden="true"></i>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate" %>
        <%= f.label :password_confirmation %><br />
      </div>
      <br/>
      <div class="actions center">
        <%= f.submit "Sign up", class: 'waves-effect waves-light btn-large' %>
      </div>
    <% end %>
    <br/>
    <div class="center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

