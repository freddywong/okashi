<ul id='dropdown1' class='dropdown-content'>
  <li><%= link_to 'Profile', edit_user_registration_path %></li>
  <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
</ul>

<nav>
  <%= link_to 'Okashi', root_url, class: "brand-logo center" %>

  <ul class="right hide-on-med-and-down">  
    <% if user_signed_in? %>  
      <%= link_to (current_user.email + "<i class='material-icons right'>arrow_drop_down</i>").html_safe, "#!", "data-activates" => "dropdown1", class: "dropdown-button" %>
    <% else %>
      <li><%= link_to 'Log In', new_user_session_path %></li>
      <li><%= link_to 'SIGN UP', new_user_registration_path, class: 'waves-effect waves-light btn' %></li> 
    <% end %>
  </ul>

  <ul id="slide-out" class="side-nav">
    <li><%= link_to 'All Snacks', root_url %></li>
    <li><%= link_to 'Chocolates', snacks_url(category: "chocolates", snack_change: "true") %></li>
    <li><%= link_to 'Biscuits', snacks_url(category: "biscuits", snack_change:"true") %></li>
  </ul>
  
  <div class="row">
    <div class="col s1">
      <%= link_to ("<i class='fa fa-heart-o' aria-hidden='true'></i>").html_safe, "#!", "data-activates" => "slide-out", class:"button-collapse show-on-large category-menu " %>
    </div>
  </div>
</nav>