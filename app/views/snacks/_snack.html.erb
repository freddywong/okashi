<div class="snack col s12 m6 l4">  
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag snack.picture.url, class:"activator" %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= snack.name %><i class="material-icons right">more_vert</i></span>
      <p><a href="#">This is a link</a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%= snack.name %><i class="material-icons right">close</i></span>
      <p><%= snack.description %></p>
    </div>
  </div>
</div>

              